{
  "author": "usagizmo <usagizmo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"next dev\" \"onchange '**/*.{js,ts,tsx,css}' -- prettier --write {{changed}}\"",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "lint:fix": "eslint . --ext ts --ext tsx --ext js --fix",
    "test": "jest",
    "test:all": "yarn lint && yarn type-check && yarn test",
    "format:js": "prettier --write \"**/*.{js,ts,tsx,mdx}\"",
    "format:css": "prettier --write \"**/*.css\"",
    "format:html": "prettier --write \"**/*.html\"",
    "format:all": "prettier --write \"**/*.{js,ts,tsx,mdx,css,html}\"",
    "mock:dev": "concurrently \"browser-sync 'mock/pages' -w\" \"yarn mock:build:watch\" \"onchange '**/*.{js,css,html}' -- prettier --write {{changed}}\"",
    "mock:build": "postcss styles.css -o mock/pages/styles.css",
    "mock:build:watch": "postcss styles.css -o mock/pages/styles.css -w",
    "mock:build:prod": "cross-env BUILD_TYPE=mock NODE_ENV=production postcss styles.css -o mock/pages/styles.css"
  },
  "browserslist": [
    "defaults"
  ],
  "dependencies": {
    "next": "^10.0.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-mitt": "^1.0.1",
    "react-spring": "^8.0.27",
    "react-use": "^15.3.4",
    "zustand": "^3.2.0"
  },
  "devDependencies": {
    "@testing-library/react": "^11.1.0",
    "@types/jest": "^26.0.15",
    "@types/node": "^14.14.6",
    "@types/react": "^16.9.55",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "browser-sync": "^2.26.13",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "onchange": "^7.1.0",
    "postcss-cli": "^8.3.0",
    "postcss-flexbugs-fixes": "4.2.1",
    "postcss-import": "12.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.0",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat",
    "typescript": "^4.1.2"
  }
}
