{
  "author": "usagizmo <usagizmo@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"next dev\" \"onchange '**/*.{js,ts,tsx,css}' -- prettier --write {{changed}}\"",
    "build": "next build",
    "start": "next start",
    "export": "next build && next export",
    "type-check": "tsc --pretty --noEmit",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "lint:fix": "eslint . --ext ts --ext tsx --ext js --fix",
    "test": "jest",
    "test:all": "yarn lint && yarn type-check && yarn test",
    "storybook": "concurrently \"start-storybook -p 6006\" \"onchange '**/*.{js,ts,tsx,mdx,css}' -- prettier --write {{changed}}\"",
    "storybook:build": "build-storybook",
    "format:js": "prettier --write \"**/*.{js,ts,tsx,mdx}\"",
    "format:css": "prettier --write \"**/*.css\"",
    "format:html": "prettier --write \"**/*.html\"",
    "mock:dev": "concurrently \"browser-sync 'mock/pages' -w\" \"yarn mock:build:watch\" \"onchange '**/*.{js,css,html}' -- prettier --write {{changed}}\"",
    "mock:build": "postcss styles.css -o mock/pages/styles.css",
    "mock:build:watch": "postcss styles.css -o mock/pages/styles.css -w",
    "mock:build:prod": "cross-env BUILD_TYPE=mock NODE_ENV=production postcss styles.css -o mock/pages/styles.css"
  },
  "dependencies": {
    "next": "latest",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-mitt": "^1.0.1",
    "react-spring": "^8.0.27",
    "react-use": "^15.3.3",
    "zustand": "^3.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@storybook/addon-actions": "^6.0.21",
    "@storybook/addon-essentials": "^6.0.21",
    "@storybook/addon-links": "^6.0.21",
    "@storybook/react": "^6.0.21",
    "@testing-library/react": "^10.0.1",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.5",
    "@types/react": "^16.9.27",
    "@types/testing-library__react": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "browser-sync": "^2.26.12",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.0.8",
    "jest": "^25.2.3",
    "jest-watch-typeahead": "^0.5.0",
    "onchange": "^7.0.2",
    "postcss-cli": "^7.1.1",
    "postcss-import": "^12.0.1",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.0.2",
    "tailwindcss": "^1.8.10",
    "typescript": "^3.8.3"
  }
}
